<UserControl x:Class="ProcessCapture.UserControls.ImageLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="Auto" Height="Auto" >
    <Border BorderBrush="Black" BorderThickness="1" Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Stretch="Uniform"/>
            <TextBlock Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"  TextWrapping="Wrap" FontFamily="{DynamicResource Font_Base}" FontWeight="Bold" FontSize="10" Foreground="Black" Margin="5"/>
            
        </Grid>
    </Border>
</UserControl>
